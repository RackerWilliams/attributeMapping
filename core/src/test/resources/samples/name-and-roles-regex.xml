<?xml version="1.0" encoding="UTF-8"?>

<rules xmlns="http://docs.rackspace.com/identity/api/ext/MappingRules"
    xmlns:saml2="urn:oasis:names:tc:SAML:2.0:assertion">
    <rule>
        <local>
            <user name="{D}" email="{D}" expire="{D}"/>
            <domain id="78334"/>
        </local>
    </rule>
    <rule>
        <local>
            <role names="nova:admin lbaas:admin"/>
        </local>
        <remote>
            <attributes name="roles" notAnyOf="C.*" regex="true"/>
        </remote>
    </rule>
    <rule>
        <local>
            <role names="nova:observer lbaas:observer"/>
        </local>
        <remote>
            <attributes name="roles" anyOneOf="U.*" regex="true"/>
        </remote>
    </rule>
</rules>