<?xml version="1.0" encoding="UTF-8"?>
<rules xmlns="http://docs.rackspace.com/identity/api/ext/MappingRules"
    xmlns:foo="bar">
    <rule>
        <local>
            <user>
                <!-- Get default from another attribute -->
                <name value="{D}"/>
                <email value="{0} {1} &lt;{D(name)}@{D(domain)}.rackspace.com&gt;"/>
                <expire value="{D}"/>
                <domain value="{D}"/>
                <roles value="{D}"/>
            </user>
        </local>
        <remote>
            <attribute name="FirstName"/>
            <attribute name="LastName"/>
        </remote>
    </rule>
</rules>

