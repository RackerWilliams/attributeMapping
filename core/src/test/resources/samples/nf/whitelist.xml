<?xml version="1.0" encoding="UTF-8"?>
<!-- 
  This is an example of a whitelist...note that because we didn't mention
  user, domain â€” then default values will be used for those.
-->
<rules xmlns="http://docs.rackspace.com/identity/api/ext/MappingRules"
       xmlns:saml2="urn:oasis:names:tc:SAML:2.0:assertion"
       xmlns:xs="http://www.w3.org/2001/XMLSchema"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <rule>
        <local>
         <user>
            <roles value="{0}"/>
         </user>
      </local>
        <remote>
            <attribute multiValue="true"
                    name="roles"
                    whitelist="lbaas:admin lbaas:observer nova:admin nova:observer"/>
        </remote>
    </rule>
</rules>
