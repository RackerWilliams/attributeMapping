<?xml version="1.0" encoding="UTF-8"?>
<rules xmlns="http://docs.rackspace.com/identity/api/ext/MappingRules"
       xmlns:saml2="urn:oasis:names:tc:SAML:2.0:assertion"
       xmlns:xs="http://www.w3.org/2001/XMLSchema"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <rule>
        <local>
         <user>
            <name value="{D}"/>
            <email value="{D}"/>
            <expire value="{D}"/>
            <domain value="78334"/>
         </user>
      </local>
    </rule>
    <rule>
        <local>
         <user>
            <roles value="nova:admin lbaas:admin"/>
         </user>
      </local>
        <remote>
            <attribute name="roles" notAnyOf="C.*" regex="true"/>
        </remote>
    </rule>
    <rule>
        <local>
         <user>
            <roles value="nova:observer lbaas:observer"/>
         </user>
      </local>
        <remote>
            <attribute name="roles" anyOneOf="U.*" regex="true"/>
        </remote>
    </rule>
</rules>
