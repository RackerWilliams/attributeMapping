<?xml version="1.0" encoding="UTF-8"?>

<rules xmlns="http://docs.rackspace.com/identity/api/ext/MappingRules"
    xmlns:saml2="urn:oasis:names:tc:SAML:2.0:assertion">
    <rule>
        <local>
            <user name="{0}" email="{1}" epireAfter="{3}"/>
            <domain id="78334"/>
        </local>
        <remote>
            <attribute name="UserName"/>
            <attribute name="Email"/>
            <!-- This is a duration rather than a timestamp -->
            <attribute name="ExpireAfter"/>
        </remote>
    </rule>
    <rule>
        <local>
            <role names="nova:admin lbaas:admin"/>
        </local>
        <remote>
            <attributes name="orgPersonType" notAnyOf="Contractor SubContractor"/>
        </remote>
    </rule>
    <rule>
        <local>
            <role names="nova:observer lbaas:observer"/>
        </local>
        <remote>
            <attributes name="orgPersonType" anyOneOf="Contractor SubContractor"/>
        </remote>
    </rule>
</rules>
